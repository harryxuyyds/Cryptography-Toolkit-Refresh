<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cryptography_Toolkit.Pages.EllipticCurveDigitalSignatureAlgorithmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cryptography_Toolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="4" BorderThickness="2" CornerRadius="10" Padding="40">

            <!-- Page Title Format Begin -->
            <TextBlock Text="Elliptic Curve Digital Signature Algorithm" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        Margin="0,0,0,8">
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Viewbox>
                            <TextBlock Text="Documentation" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <PathIcon Data="{StaticResource GitHubIconPath}" />
                            </Viewbox>
                            <TextBlock Text="Source" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xED15;" />
                            </Viewbox>
                            <TextBlock Text="Feedback" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <TextBlock Text="The Elliptic Curve Digital Signature Algorithm ( ECDSA ) offers a variant of the Digital Signature Algorithm ( DSA ) which uses elliptic-curve cryptography." 
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>
            <!-- Page Title Format End -->

            <InfoBar
                IsOpen="True"
                IsIconVisible="True"
                IsClosable="True"
                Severity="Informational"
                Title="Tip"
                Message="Please enter smaller parameter values. For larger numbers, use Cryptography PowerToys." />

            <TextBlock Text="The ECDSA Algorithm" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Key Generation"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,8,0,8"/>

            <controls:SettingsExpander Description=""
                                       Header="Key Generation for ECDSA">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE8D7;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>

                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <TextBlock Text="Signing and Verification"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,8,0,8"/>

            <controls:SettingsExpander Description=""
                                       Header="ECDSA Signature Generation">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xEF3F;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>

                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <controls:SettingsExpander Description=""
                                       Header="ECDSA Signature Verification">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xF32A;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>

                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

        </StackPanel>
    </ScrollViewer>
</Page>
