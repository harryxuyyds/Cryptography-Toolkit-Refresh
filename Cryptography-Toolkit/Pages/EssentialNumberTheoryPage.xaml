<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cryptography_Toolkit.Pages.EssentialNumberTheoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cryptography_Toolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="4" BorderThickness="2" CornerRadius="10" Padding="40">

            <!-- Page Title Format Begin -->
            <TextBlock Text="Essential Number Theory for Public-Key Algorithms" 
               Style="{StaticResource TitleTextBlockStyle}" 
               Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" 
                Spacing="8" 
                Margin="0,0,0,8">
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Viewbox>
                            <TextBlock Text="Documentation" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <PathIcon Data="{StaticResource GitHubIconPath}" />
                            </Viewbox>
                            <TextBlock Text="Source" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xED15;" />
                            </Viewbox>
                            <TextBlock Text="Feedback" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <TextBlock Text="We introduce the Euclidean algorithm, Euler’s phi function, Fermat’s Little Theorem and Euler’s theorem. All are important for asymmetric algorithms, especially for the RSA scheme." 
               TextWrapping="Wrap"
               Margin="0,0,0,12"/>
            <!-- Page Title Format End -->

            <TextBlock Text="Euclidean Algorithm" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Configuration"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,8,0,8"/>

            <controls:SettingsExpander Description=""
                                       Header="Euclidean Algorithm Set-up">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE819;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard Description=""
                                           Header="Positive integers r_0">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE961;" />
                        </controls:SettingsCard.HeaderIcon>
                        <NumberBox
                            Value="30"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="1" />
                    </controls:SettingsCard>
                    <controls:SettingsCard Description=""
                                           Header="Positive integers r_1">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE961;" />
                        </controls:SettingsCard.HeaderIcon>
                        <NumberBox
                            Value="54"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="1" />
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <TextBlock Text="Extended Euclidean Algorithm" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Configuration"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,8,0,8"/>

            <controls:SettingsExpander Description=""
                                       Header="Extended Euclidean Algorithm Set-up">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE819;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard Description=""
                                           Header="Positive integers r_0">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE961;" />
                        </controls:SettingsCard.HeaderIcon>
                        <NumberBox
                            Value="30"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="1" />
                    </controls:SettingsCard>
                    <controls:SettingsCard Description=""
                                           Header="Positive integers r_1">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE961;" />
                        </controls:SettingsCard.HeaderIcon>
                        <NumberBox
                            Value="54"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="1" />
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <TextBlock Text="Euler’s Phi Function" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Configuration"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,8,0,8"/>

            <controls:SettingsExpander Description=""
                                       Header="Euler’s Phi Function Set-up">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE819;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard Description=""
                                           Header="Positive integers r_0">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE961;" />
                        </controls:SettingsCard.HeaderIcon>
                        <NumberBox
                            Value="30"
                            Minimum="1"
                            SpinButtonPlacementMode="Inline"
                            SmallChange="1"
                            LargeChange="1" />
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <TextBlock Text="Fermat’s Little Theorem" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Euler’s Theorem" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>
        </StackPanel>
    </ScrollViewer>
</Page>
