<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cryptography_Toolkit.Pages.SubstitutionCipherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cryptography_Toolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="4" BorderThickness="2" CornerRadius="10" Padding="40">

            <!-- Page Title Format Begin -->
            <TextBlock Text="Substitution Cipher" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" 
                    Spacing="8" 
                    Margin="0,0,0,8">
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Viewbox>
                            <TextBlock Text="Documentation" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <PathIcon Data="{StaticResource GitHubIconPath}" />
                            </Viewbox>
                            <TextBlock Text="Source" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xED15;" />
                            </Viewbox>
                            <TextBlock Text="Feedback" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Send"/>
                            <MenuFlyoutItem Text="Reply"/>
                            <MenuFlyoutItem Text="Reply All"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <TextBlock Text="The substitution cipher is a method of encrypting in which units of plaintext are replaced with the ciphertext, in a defined manner, with the help of a key." 
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"/>
            <!-- Page Title Format End -->

            <TextBlock Text="Configuration" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <controls:SettingsCard Description=""
                                   Header="16-byte plaintext presets">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE896;" />
                </controls:SettingsCard.HeaderIcon>
                <ComboBox x:Name="AesPlaintextPresetsComboBox"
                          SelectedIndex="4">
                    <ComboBoxItem Content="Default ( ascending )" />
                    <ComboBoxItem Content="Default ( descending )" />
                    <ComboBoxItem Content="0xF0" />
                    <ComboBoxItem Content="Random" />
                    <ComboBoxItem Content="Custom" />
                </ComboBox>
            </controls:SettingsCard>

            <controls:SettingsCard Description=""
                                   Header="16-byte key presets">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE896;" />
                </controls:SettingsCard.HeaderIcon>
                <ComboBox x:Name="AesKeyPresetsComboBox"
                          SelectedIndex="4">
                    <ComboBoxItem Content="0x00" />
                    <ComboBoxItem Content="0xFF" />
                    <ComboBoxItem Content="0xF0" />
                    <ComboBoxItem Content="Random" />
                    <ComboBoxItem Content="Custom" />
                </ComboBox>
            </controls:SettingsCard>

            <TextBox x:Name="AesPlaintextTextBox" 
                     Header="16-byte plaintext" 
                     PlaceholderText="Plaintext" 
                     Margin="0, 8, 0, 4"/>

            <TextBox x:Name="AesKeyTextBox" 
                     Header="16-byte key" 
                     PlaceholderText="Key" 
                     Margin="0, 8, 0, 4"/>

            <controls:SettingsCard Description="Select which mode you want to use."
                                   Header="Cipher mode">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE8AB;" />
                </controls:SettingsCard.HeaderIcon>
                <ToggleSwitch x:Name="ShiftCipherModeToggleSwitch" 
                              OffContent="Decryption" 
                              OnContent="Encryption" 
                              IsOn="True" />
            </controls:SettingsCard>

            <TextBlock Text="Input" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>
            <TextBox x:Name="ShiftCipherMessageTextBox" 
                     PlaceholderText="" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="200"
                     VerticalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

            <TextBlock Text="Output ( Read Only )" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>
            <TextBox x:Name="ShiftCipherResultTextBox" 
                     PlaceholderText="" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="200"
                     VerticalAlignment="Stretch"
                     IsReadOnly="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        </StackPanel>
    </ScrollViewer>
</Page>
