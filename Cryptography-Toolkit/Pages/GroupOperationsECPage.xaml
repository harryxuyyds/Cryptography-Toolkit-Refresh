<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cryptography_Toolkit.Pages.GroupOperationsECPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cryptography_Toolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="4" BorderThickness="2" CornerRadius="10" Padding="40">

            <!-- Page Title Format Begin -->
            <TextBlock Text="Group Operations on Elliptic Curves" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        Margin="0,0,0,8">
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Viewbox>
                            <TextBlock Text="Documentation" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <PathIcon Data="{StaticResource GitHubIconPath}" />
                            </Viewbox>
                            <TextBlock Text="Source" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xED15;" />
                            </Viewbox>
                            <TextBlock Text="Feedback" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <TextBlock Text="Group operations on ECC include point addition, and point doubling. These operations form the foundation for cryptographic algorithms and secure key exchange." 
                       TextWrapping="Wrap"
                       Margin="0,0,0,12"/>
            <!-- Page Title Format End -->

            <InfoBar
                IsOpen="True"
                IsIconVisible="True"
                IsClosable="True"
                Severity="Informational"
                Title="Tip"
                Message="Please enter smaller parameter values. For larger numbers, use Cryptography PowerToys." />

            <TextBlock Text="Elliptic Curve Configuration" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <controls:SettingsCard Description="Defines the first elliptic curve parameter in the equation yÂ² â‰¡ xÂ³ + ax + b (mod p)."
                                   Header="Coefficient A">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE961;" />
                </controls:SettingsCard.HeaderIcon>
                <NumberBox
                    x:Name="DefinitionEcCoefficientANumberBox"
                    Value="9"
                    Minimum="1"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="1"
                    LargeChange="1" />
            </controls:SettingsCard>

            <controls:SettingsCard Description="Defines the second elliptic curve parameter in the equation yÂ² â‰¡ xÂ³ + ax + b (mod p)."
                                   Header="Coefficient B">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE961;" />
                </controls:SettingsCard.HeaderIcon>
                <NumberBox
                    x:Name="DefinitionEcCoefficientBNumberBox"
                    Value="11"
                    Minimum="1"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="1"
                    LargeChange="1" />
            </controls:SettingsCard>

            <controls:SettingsCard Description="Prime number defining the finite field ð”½â‚š for curve operations."
                                   Header="â€‹Field Modulus">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE961;" />
                </controls:SettingsCard.HeaderIcon>
                <NumberBox
                    x:Name="DefinitionEcFieldModulusNumberBox"
                    Value="53"
                    Minimum="3"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="1"
                    LargeChange="1" />
            </controls:SettingsCard>

            <TextBlock Text="Elliptic Curve Check" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <InfoBar
                x:Name="DefinitionEcCheckInfoBar"
                IsOpen="True"
                IsIconVisible="True"
                IsClosable="False"
                Severity="Informational"
                Title="Status"
                Message="Pending Validation (Enter correct parameters to check)â€‹" />

            <controls:SettingsCard Description="The curve order #E(ð”½â‚š) is the total number of points, including infinity."
                                   Header="Order of Elliptic Curve">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE718;" />
                </controls:SettingsCard.HeaderIcon>
                <TextBlock x:Name="DefinitionEcOrderTextBlock" Text=""/>
            </controls:SettingsCard>

            <TextBlock Text="Group Operations Configuration" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <controls:SettingsCard Description="First input point ( x_Pâ€‹ ,y_P )."
                                   Header="Point P">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xECAF;" />
                </controls:SettingsCard.HeaderIcon>
                <ComboBox x:Name="PointPComboBox"/>
            </controls:SettingsCard>

            <controls:SettingsCard Description="Second input point ( x_Qâ€‹ ,y_Qâ€‹ ) (for addition)."
                                   Header="Point Q">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xECAF;" />
                </controls:SettingsCard.HeaderIcon>
                <ComboBox x:Name="PointQComboBox"/>
            </controls:SettingsCard>

            <TextBlock Text="Group Operations Output" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <controls:SettingsCard Description=""
                                   Header="Point Addition ( P + Q )â€‹">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xECAF;" />
                </controls:SettingsCard.HeaderIcon>
                <TextBlock x:Name="PointAdditionResultTextBlock"/>
            </controls:SettingsCard>

            <controls:SettingsCard Description=""
                                   Header="Point Doubling ( P + P )">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xECAF;" />
                </controls:SettingsCard.HeaderIcon>
                <TextBlock x:Name="PointDoublingResultTextBlock"/>
            </controls:SettingsCard>

        </StackPanel>
    </ScrollViewer>
</Page>
