<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cryptography_Toolkit.Pages.GenericDLAlgorithmsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cryptography_Toolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="4" BorderThickness="2" CornerRadius="10" Padding="40">

            <!-- Page Title Format Begin -->
            <TextBlock Text="Generic DL Algorithms" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" 
                    Spacing="8" 
                    Margin="0,0,0,8">
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Viewbox>
                            <TextBlock Text="Documentation" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <PathIcon Data="{StaticResource GitHubIconPath}" />
                            </Viewbox>
                            <TextBlock Text="Source" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <DropDownButton>
                    <DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Viewbox Height="18">
                                <FontIcon Glyph="&#xED15;" />
                            </Viewbox>
                            <TextBlock Text="Feedback" />
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                            <MenuFlyoutItem Text="Currently Unavailable"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <TextBlock Text="Generic DL algorithms are methods that only use the group operation and no other algebraic structure of the group under consideration. Since they do not exploit special properties of the group, they work in any cyclic group." 
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"/>
            <!-- Page Title Format End -->

            <TextBlock Text="Configuration" 
                       Style="{StaticResource BodyStrongTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Shanks' Baby-Step Giant-Step Method" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>

            <TextBlock Text="Pollard's Rho Method" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       Margin="0,8,0,8"/>
        </StackPanel>
    </ScrollViewer>
</Page>
